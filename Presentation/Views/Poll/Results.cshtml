@model Presentation.Models.PollResultsViewModel

@{
    ViewData["Title"] = "Poll Results";
}

<h2 class="mb-4">Poll Results</h2>
<h4 class="mb-3">@Model.Title</h4>

@if (ViewBag.Message != null)
{
    <div class="alert alert-warning">@ViewBag.Message</div>
}

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Option</th>
            <th>Votes</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Option1Text</td>
            <td>@Model.Option1VotesCount</td>
        </tr>
        <tr>
            <td>@Model.Option2Text</td>
            <td>@Model.Option2VotesCount</td>
        </tr>
        <tr>
            <td>@Model.Option3Text</td>
            <td>@Model.Option3VotesCount</td>
        </tr>
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to Polls</a>
